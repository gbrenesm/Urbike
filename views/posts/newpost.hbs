<form action="/newpost" method="POST" enctype="multipart/form-data">
  <div class="form-group">
    <label for="title">Título</label>
    <input type="text" class="form-control" id="title" name="title">
  </div>

  <div class="form-group">
    <label for="content">Contenido</label>
    <input type="textarea" class="form-control" id="content" name="content">
  </div>
  
  <div class="custom-file">
    <input type="file" class="custom-file-input" id="customFile" name="image">
    <label class="custom-file-label" for="customFile">Selecciona un archivo</label>
</div>
<div class="custom-control custom-checkbox">
  <input type="checkbox" class="custom-control-input" id="customCheck1">
  <label class="custom-control-label" for="customCheck1" name="recomendación">Recomendación</label>
</div>
<button type="submit" class="btn btn-primary">Crear post</button>
</form>