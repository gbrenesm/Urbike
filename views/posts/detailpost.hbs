
<main>
  <div>
    <div>
      <img id="profilepic" src="{{creatorId.profilePhoto}}" alt="">
      <h4>Post de {{creatorId.username}}</h4>
    </div>
    <div>
      <img src="{{picPath}}" alt="{{picName}}">
    </div>
    <div>
      <h2>{{title}}</h2>
      <p>{{content}}</p>
    </div>
  </div>
  
  <h2>Todos los comentarios</h2>
  <br>
  {{#each comments}}
    <div>
      <div>
        <p><b>Comentario de {{creatorId.username}}</b></p>
        <p>{{content}}</p>
      </div>
    </div>
  {{/each}}

<h2>Crea un nuevo comentario</h2>
<form action="/foro/{{_id}}" method="POST">
  <div class="form-group">
    <label for="content">Comentario</label>
    <textarea class="form-control" id="content" name="content" rows="2"></textarea>
  </div>
  <button type="submit">Env√≠a</button>
</form>
</main>
