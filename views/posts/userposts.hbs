<link rel="stylesheet" href="/stylesheets/forostyle.css" />
  
<main class="foro">
  <nav>
      <button><a href="/newpost">Crea una nueva entrada</a></button>
      <br>
      <button><a href="/profile">Regresa a tu perfil</a></button>
  </nav>
  <section>
    <h3>Tus entradas</h3>
    <div>
      {{#each posts}}
        <div>
          <div>
            <img src="{{photo}}" alt="{{title}}">
          </div>
          <div>
            <h3>{{title}}</h3>
            <p>{{content}}</p>
            <button class="userpostsbtn"><a href="/foro/{{_id}}">Detalles y comentarios</a></button>
            <button class="userpostsbtn"><a href="/profile/{{_id}}">Elimina la entrada</a></button>
          </div>
        </div>
        {{else}}
        <p class="empty">AÃºn no tienes entradas</p>
      {{/each}}
    </div>
  </section>
</main>








